---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
	<header class="bg-[#D2D9DF] p-4">
		<div class="container mx-auto flex justify-between items-center">
			<img src="https://i.ibb.co/pjpxhxt/p1logo.png" alt="Logo" class="h-12" />
			<nav>
				<ul class="flex space-x-4">
					<li><a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">HOME</a></li>
					<li class="relative group">
						<a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">NOSOTROS</a>
						<ul class="absolute hidden group-hover:block bg-white shadow-md mt-0 py-2 rounded">
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">NUESTRA PISTA</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">QUIENES SOMOS</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">COMPROMISO ECOLOGICO</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">SOCIOS COMERCIALES</a></li>
						</ul>
					</li>
					<li><a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">CALENDARIO</a></li>
					<li><a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">NOTICIAS</a></li>
					<li><a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">PATROCINADORES</a></li>
					<li class="relative group">
						<a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">EVENTOS</a>
						<ul class="absolute hidden group-hover:block bg-white shadow-md mt-0 py-2 rounded">
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">KARTISMO</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">MOTOCICLISMO</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">OTROS</a></li>
						</ul>
					</li>
					<li class="relative group">
						<a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">SERVICIOS</a>
						<ul class="absolute hidden group-hover:block bg-white shadow-md mt-0 py-2 rounded">
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">ALQUILER DE PISTA</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">ALQUILER DE KARTS</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">TIENDAS</a></li>
							<li><a href="#" class="block px-4 py-2 text-black hover:bg-[#231F20] hover:text-white">RESTAURANTE</a></li>
						</ul>
					</li>
					<li><a href="#" class="text-black hover:bg-[#231F20] hover:text-white px-2 py-1 rounded transition duration-300">CONTACTENOS</a></li>
				</ul>
			</nav>
			<div class="flex space-x-4">
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-instagram"></i></a>
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-whatsapp"></i></a>
			</div>
		</div>
	</header>

	<main class="bg-custom-bg min-h-screen p-8">
		<div class="container mx-auto">
			<h2 class="text-white text-3xl font-bold mb-8">LO ÚLTIMO</h2>
			<div class="grid grid-cols-[2fr,1fr,1fr] gap-8">
				<!-- Contenedor de la imagen principal -->
				<div class="col-span-1">
					<div class="w-full h-[400px]"> <!-- Altura fija -->
						<img src="https://picsum.photos/800/600" alt="Imagen principal" class="w-full h-full object-cover rounded-lg" />
					</div>
				</div>

				<!-- Contenedor de las imágenes secundarias -->
				<div class="col-span-1 space-y-4">
					<div class="flex flex-col">
						<div class="bg-[#FF0000] text-white p-1 text-center rounded-t-lg">KARTISMO</div>
						<div class="w-full h-[135px]"> <!-- Altura fija -->
							<img src="https://picsum.photos/450/200" alt="Kartismo" class="w-full h-full object-cover" />
						</div>
						<div class="bg-[#FF0000] text-white text-center rounded-b-lg">GALERIA DE FOTOS</div>
					</div>
					<div class="flex flex-col">
						<div class="bg-[#FF0000] text-white p-1 text-center rounded-t-lg">MOTOCICLISMO</div>
						<div class="w-full h-[135px]"> <!-- Altura fija -->
							<img src="https://picsum.photos/450/200" alt="Motociclismo" class="w-full h-full object-cover" />
						</div>
						<div class="bg-[#FF0000] text-white text-center rounded-b-lg">GALERIA DE FOTOS</div>
					</div>
				</div>

				<!-- Contenedor de la última imagen -->
				<div class="col-span-1">
					<div class="flex flex-col">
						<div class="bg-[#FF0000] text-white p-2 text-center rounded-t-lg">EVENTOS</div>
						<div class="w-full h-[350px]"> <!-- Altura fija -->
							<img src="https://picsum.photos/300/400" alt="Eventos" class="w-full h-full object-cover rounded-b-lg" />
						</div>
					</div>
				</div>
			</div>

		</div>
	</main>



	<footer class="bg-[#D2D9DF] p-4">
		<div class="container mx-auto flex justify-start items-center">
			<div class="flex space-x-4">
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-instagram"></i></a>
				<a href="#" class="text-black hover:text-gray-700"><i class="fab fa-whatsapp"></i></a>
			</div>
		</div>
	</footer>
</Layout>