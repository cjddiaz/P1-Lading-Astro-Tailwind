---
import Layout from '../layouts/Layout.astro';
import ImageGallery from '../components/ImageGallery';
import event1 from '../assets/images/eventos/event1.webp';
import event2 from '../assets/images/eventos/event2.webp';

const eventImages = [
  { id: 1, url: event1, caption: 'Track Day Oficial P1' },
  { id: 2, url: event2, caption: 'Open Track Nocturno' },
];
---

<Layout title="Últimos Eventos - P1 Speedway">
  <main class="pt-32 pb-16 bg-black min-h-screen border-t border-neutral-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ImageGallery
        client:load
        title="Últimos Eventos"
        photographer="Carlos Díaz"
        images={eventImages}
      />
    </div>
  </main>
</Layout>
