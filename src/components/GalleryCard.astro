---
// GalleryCard.astro
interface Props {
  title: string;
  image: string;
  link: string;
}

const { title, image, link } = Astro.props;
---

<a href={link} class="group block relative overflow-hidden rounded-xl aspect-[4/3] shadow-2xl bg-neutral-900 isolation-auto border border-neutral-800">
  <!-- Image -->
  <img 
    src={image} 
    alt={title} 
    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    loading="lazy"
  />
  
  <!-- Overlay Gradient -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-100 transition-opacity duration-300"></div>

  <!-- Content -->
  <div class="absolute inset-0 p-6 flex flex-col justify-end items-start transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
    <h3 class="text-2xl font-bold text-white mb-2 leading-tight">{title}</h3>
    
    <div class="inline-flex items-center gap-2 text-red-500 font-semibold text-sm uppercase tracking-wider">
      <span>Ver Galer√≠a</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </div>
  </div>
</a>
