---
interface Props {
  title: string;
  image: string;
  link: string;
}

const { title, image, link } = Astro.props;
---

<div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform duration-300 hover:scale-105">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <a href={link} class="inline-block bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700 transition-colors duration-300">
      Ver Galer√≠a
    </a>
  </div>
</div>